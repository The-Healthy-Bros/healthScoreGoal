<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FoodFrag"
    android:background="#a0c7fa">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foodRV"
        android:layout_width="match_parent"
        android:layout_height="399dp"
        android:layout_marginTop="40dp"
        tools:listitem="@layout/food_item" />

    <TextView
        android:id="@+id/foodJTV"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Journal:" />

    <TextView
        android:id="@+id/recipeTV"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="475dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search For Recipes By Ingredients:" />

    <Button
        android:id="@+id/sugarButton"
        android:layout_marginTop="515dp"
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Sugar" />

    <Button
        android:id="@+id/calorieButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="515dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Calories" />

    <Button
        android:id="@+id/carbButton"
        android:layout_marginTop="515dp"
        android:layout_marginStart="275dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Carbs" />
</FrameLayout>